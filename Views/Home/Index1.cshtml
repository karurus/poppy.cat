<div class="row" style="font-family:Verdana">
    <div class="col-md-3">
        <h3>Where</h3>
        <ul style="padding-left:0;">
            <input type="text" class="form-control" id="where" placeholder="City, address">
        </ul>
    </div>
    <div class="col-md-2">
        <h3>Guests</h3>
        <ul style="padding-left:0;">
            <input class = "form-control"style = "padding-left:3em"type = "number"id = "guests"value = "1"min = "1"max = "5"placeholder = "1 Guest"/> 
        </ul>
    </div>
    <div class="col-md-3">
        <h3>Check In</h3>
        <ul style="padding-left:0;">
            <input class="form-control" type="date" id="checkinDate" />
        </ul>
    </div>
    <div class="col-md-3">
        <h3>Check Out</h3>
        <ul style="padding-left:0;">
            <input class="form-control" type="date" id="checkoutDate" onchange="myFunction()" />
        </ul>

    </div>
    <div class="col-md-12">
        <ul style="padding-left:0;">
            <br />
            <input type = "button"class = "btn btn-default"value = "Search &raquo;"onclick = "location.href='@Url.Action("Cafe", "Cafe" )'" />  
        </ul>
    </div>
    <script type="text/javascript">
        document.getElementById('checkinDate').valueAsDate = new Date(); 
        document.getElementById('checkoutDate').valueAsDate = new Date(); 
        myFunction = function () {

            var chkInDate = new Date(document.getElementById("checkinDate").value);

            var chkOutDate = new Date(document.getElementById("checkoutDate").value);
            var timeDiff = Math.abs(chkOutDate.getTime() - chkInDate.getTime());
            var diffDays = Math.ceil(timeDiff / (1000 * 3600 * 24));
            document.getElementById("diff").innerHTML = diffDays

            var price = 50 * diffDays;
            document.getElementById("price_total").innerHTML = price;
        }
    </script>

</div>
